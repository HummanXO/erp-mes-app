# Copy this file to .env and fill in real values.
# Do not commit .env files.

# Database (used by docker-compose.prod.yml)
POSTGRES_DB=erp_mes
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong-password

# Backend auth secrets (required)
SECRET_KEY=change-me-random-64-plus-chars
JWT_SECRET_KEY=change-me-random-64-plus-chars

# Telegram integration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_WEBHOOK_SECRET=

# Public backend base URL (for webhook URL generation)
API_BASE_URL=http://localhost:8000

# Frontend API endpoint
# API mode: http://localhost:8000/api/v1 or /api/v1
# Demo mode: set empty value
# IMPORTANT: do not set NEXT_PUBLIC_API_BASE_URL together with NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_API_BASE_URL=/api/v1
NEXT_PUBLIC_DEMO_MODE=false

# Runtime mode
ENV=production
DEBUG=false
