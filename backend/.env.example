# Copy to backend/.env for local backend runs.
# Do not commit backend/.env.

ENV=development
DEBUG=true

# Required backend secrets
SECRET_KEY=change-me-random-64-plus-chars
JWT_SECRET_KEY=change-me-random-64-plus-chars

# Required when backend runs outside docker-compose service wiring
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/erp_mes
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS/CSRF
ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Telegram integration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_WEBHOOK_SECRET=
API_BASE_URL=http://localhost:8000
